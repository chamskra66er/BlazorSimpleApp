@page "/counter"
@using Microsoft.AspNetCore.Blazor.Components
@using System.Threading

<h1>Counter</h1>

<p>Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">@*disabled="@(currentCount>=10)*@
    Click me
</button>
<input type="number" @bind="@incremenet"/>
@*<input type="number" value="@incremenet" @onchange="@((UIChangeEventArgs e)=>
                                                     incremenet=int.Parse($"{e.value}"))"/>*@
@*<input class="col-8" bind="@date" format-value="dd-MM-yyyy"/>*@
<button class="btn btn-success" @onclick="AutoIncrement">
    Auto increment
</button>


@code {
    private int currentCount = 0;
    public int incremenet = 1;
    private DateTime date = DateTime.Now;

    private void IncrementCount()
    {
        currentCount += incremenet;
    }
    void AutoIncrement()
    {
        var timer = new Timer((_) =>
        {
            IncrementCount();
            StateHasChanged();
        },null,TimeSpan.FromSeconds(1),TimeSpan.FromSeconds(1));
    }

}
